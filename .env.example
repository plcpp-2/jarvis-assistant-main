# Jarvis Assistant Environment Configuration

# Azure Configuration
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_SUBSCRIPTION_ID=your_subscription_id

# OpenID Connect Configuration
OPENID_DISCOVERY_URL=https://login.microsoftonline.com/common/v2.0/.well-known/openid-configuration
OPENID_CLIENT_ID=your_openid_client_id
OPENID_CLIENT_SECRET=your_openid_client_secret
OPENID_REDIRECT_URI=http://localhost:8000/callback

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=jarvis_user
DATABASE_NAME=jarvis_db
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL_MODE=require

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/jarvis.log

# Feature Flags
FEATURE_MONITORING=true
FEATURE_AI_SERVICES=true
FEATURE_BLOCKCHAIN=false
FEATURE_WEBHOOKS=true

# Security Configuration
JWT_SECRET_KEY=generate_a_long_random_secret
WEBHOOK_SECRET=generate_a_secure_random_webhook_secret
CORS_ORIGINS=https://app.jarvis-assistant.com,http://localhost:3000
RATE_LIMIT=100

# External Service API Keys
OPENAI_API_KEY=your_openai_api_key
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# Blockchain and Crypto Configuration
ETHEREUM_NODE_URL=https://mainnet.infura.io/v3/your_infura_project_id
BITCOIN_NODE_URL=http://localhost:8332
INFURA_PROJECT_ID=your_infura_project_id

# Monitoring and Observability
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENDPOINT=http://localhost:9090
DATADOG_API_KEY=your_datadog_api_key

# Cloud Service Endpoints
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_STORAGE_ACCOUNT_URL=https://your-storage.blob.core.windows.net
AZURE_COSMOS_URL=https://your-cosmos.documents.azure.com:443/

# Service Ports
CORE_SERVICE_PORT=8000
WEBSOCKET_PORT=8001
GRPC_PORT=50051
AI_SERVICE_PORT=8888

# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Compliance and Data Protection
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true

# Blockchain Cold Wallet Addresses (EXAMPLE - REPLACE WITH YOUR OWN)
ETHEREUM_COLD_WALLET=0x1234567890123456789012345678901234567890
BITCOIN_COLD_WALLET=bc1qar0srrr7xfkvy5l643lydnw9re59gtzzwf5mdq

# Encryption Key (for sensitive data encryption)
ENCRYPTION_KEY=generate_a_secure_fernet_key_here

# Optional: Specific Environment Overrides
# Uncomment and modify as needed for different environments
# DEVELOPMENT_SPECIFIC_SETTING=value
# PRODUCTION_SPECIFIC_SETTING=value

# IMPORTANT: NEVER commit this file with real secrets to version control!
# Use this as a template and create a .env file with your actual secrets.
